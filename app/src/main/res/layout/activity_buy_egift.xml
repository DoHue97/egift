<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.BuyEGiftActivity">

    <include
        android:id="@+id/include"
        layout='@layout/custom_back_ground_mainpage'
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <include
        android:id="@+id/header"
        layout="@layout/custom_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:layout_marginTop="@dimen/header_margin_top"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header"
        android:background="@drawable/page_background"
        android:layout_marginTop="10dp"
        android:fillViewport="true"
        android:visibility="visible">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:padding="18dp">

            <TextView
                android:id="@+id/textView7"
                style="@style/text_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/gift_card_amount" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/edit_text_height"
                android:layout_marginTop="12dp"
                android:background="@drawable/field_border"
                android:paddingStart="8dp"
                android:paddingEnd="8dp">

                <EditText
                    android:id="@+id/edBuyEGiftAmount"
                    style="@style/text_normal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/Transparent"
                    android:cursorVisible="true"
                    android:ems="10"
                    android:focusable="auto"
                    android:hint="â‚¬0.00"
                    android:inputType="numberDecimal"
                    android:textColorHint="@color/textHint"
                    android:textColor="@color/textEdit"
                    android:textIsSelectable="false" />
            </RelativeLayout>

            <TextView
                style="@style/text_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/sender_name" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/edit_text_height"
                android:layout_marginTop="12dp"
                android:background="@drawable/field_border"
                android:paddingStart="8dp"
                android:paddingEnd="8dp">

                <EditText
                    android:id="@+id/edBuyEGiftSender"
                    style="@style/text_normal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/Transparent"
                    android:cursorVisible="true"
                    android:focusable="auto"
                    android:hint="@string/enter_name"
                    android:inputType="text"
                    android:textColorHint="@color/textHint"
                    android:textColor="@color/textEdit"
                    android:textIsSelectable="false" />
            </RelativeLayout>

            <TextView
                style="@style/text_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/beneficiary_name" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/edit_text_height"
                android:layout_marginTop="12dp"
                android:background="@drawable/field_border"
                android:paddingStart="8dp"
                android:paddingEnd="8dp">

                <EditText
                    android:id="@+id/edBuyEGiftRecipientName"
                    style="@style/text_normal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/Transparent"
                    android:cursorVisible="true"
                    android:focusable="auto"
                    android:hint="@string/enter_name"
                    android:inputType="text"
                    android:textColorHint="@color/textHint"
                    android:textColor="@color/textEdit"
                    android:textIsSelectable="false" />
            </RelativeLayout>

            <TextView
                style="@style/text_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/beneficiary_email" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/edit_text_height"
                android:layout_marginTop="12dp"
                android:background="@drawable/field_border"
                android:paddingStart="8dp"
                android:paddingEnd="8dp">

                <EditText
                    android:id="@+id/edBuyEGiftRecipientEmail"
                    style="@style/text_normal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/Transparent"
                    android:cursorVisible="true"
                    android:focusable="auto"
                    android:hint="@string/enter_email"
                    android:inputType="textEmailAddress"
                    android:textColorHint="@color/textHint"
                    android:textColor="@color/textEdit"
                    android:textIsSelectable="false" />
            </RelativeLayout>

            <TextView
                style="@style/text_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/gift_message" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/edit_text_height"
                android:layout_marginTop="12dp"
                android:background="@drawable/field_border"
                android:paddingStart="8dp"
                android:paddingEnd="8dp">

                <EditText
                    android:id="@+id/edBuyEGiftMessage"
                    style="@style/text_normal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/Transparent"
                    android:cursorVisible="true"
                    android:focusable="auto"
                    android:hint="@string/enter_message"
                    android:inputType="text"
                    android:textColorHint="@color/textHint"
                    android:textColor="@color/textEdit"
                    android:textIsSelectable="false" />
            </RelativeLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_primary_height"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="10dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp"
                app:cardPreventCornerOverlap="false">

                <TextView
                    android:id="@+id/btBuyEGiftContinue"
                    style="@style/button_primary"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@color/buttonDisable"
                    android:enabled="false"
                    android:gravity="center"
                    android:text="@string/continue_title"
                    android:textAlignment="center"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="18sp"
                    android:textStyle="normal"
                    android:onClick="onContinue"/>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header"
        android:background="@drawable/page_background"
        android:layout_marginTop="10dp"
        android:visibility="gone">
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="vertical"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:paddingRight="25dp"
                android:paddingTop="18dp"
                android:paddingLeft="25dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        style="@style/text_label"
                        android:layout_width="0dp"
                        android:layout_weight="5"
                        android:layout_height="wrap_content"
                        android:text="@string/gift_card_amount" />
                    <TextView
                        android:id="@+id/tvBuyEGiftAmount"
                        android:layout_width="0dp"
                        android:layout_weight="5"
                        android:layout_height="wrap_content"
                        android:paddingLeft="12dp"
                        android:paddingRight="12dp"
                        android:textAlignment="textEnd"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimary"
                        android:text="$1.00"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="16dp">
                    <TextView
                        style="@style/text_label"
                        android:layout_width="0dp"
                        android:layout_weight="5"
                        android:layout_height="wrap_content"
                        android:text="@string/sender_name" />
                    <TextView
                        android:id="@+id/tvBuyEGiftSender"
                        android:layout_width="0dp"
                        android:layout_weight="5"
                        android:layout_height="wrap_content"
                        android:paddingLeft="12dp"
                        android:paddingRight="12dp"
                        android:textAlignment="textEnd"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimary"
                        android:text="Brian"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="16dp">
                    <TextView
                        style="@style/text_label"
                        android:layout_width="0dp"
                        android:layout_weight="5"
                        android:layout_height="wrap_content"
                        android:text="@string/beneficiary_name" />
                    <TextView
                        android:id="@+id/tvBuyEGiftRecipientName"
                        android:layout_width="0dp"
                        android:layout_weight="5"
                        android:layout_height="wrap_content"
                        android:paddingLeft="12dp"
                        android:paddingRight="12dp"
                        android:textAlignment="textEnd"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimary"
                        android:text="Brian"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="16dp">
                    <TextView
                        style="@style/text_label"
                        android:layout_width="0dp"
                        android:layout_weight="4.5"
                        android:layout_height="wrap_content"
                        android:text="@string/beneficiary_email" />
                    <TextView
                        android:id="@+id/tvBuyEGiftRecipientEmail"
                        android:layout_width="0dp"
                        android:layout_weight="5"
                        android:layout_height="wrap_content"
                        android:paddingLeft="12dp"
                        android:paddingRight="12dp"
                        android:textAlignment="textEnd"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimary"
                        android:text="abasdcd@hi.hii"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="16dp">
                    <TextView
                        style="@style/text_label"
                        android:layout_width="wrap_content"
                        android:layout_weight="2"
                        android:layout_height="wrap_content"
                        android:text="@string/gift_message" />
                    <TextView
                        android:id="@+id/tvBuyEGiftMessage"
                        android:layout_width="0dp"
                        android:layout_weight="8"
                        android:layout_height="wrap_content"
                        android:paddingLeft="12dp"
                        android:paddingRight="12dp"
                        android:textAlignment="textEnd"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimary"
                        android:text="Happy name day!!!!"/>
                </LinearLayout>

                <TextView
                    style="@style/text_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textStyle="italic"
                    android:layout_marginTop="35dp"
                    android:text="@string/agree_term" />

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card"
                    android:layout_width="match_parent"
                    android:layout_height="118dp"
                    app:layout_constraintTop_toBottomOf="@id/header"
                    app:layout_constraintBottom_toTopOf="@+id/fragment_receipt_option"
                    android:layout_marginTop="20dp"
                    app:cardCornerRadius="@dimen/cardview_corner_radius"
                    app:cardElevation="@dimen/cardview_elevation"
                    app:strokeWidth="2dp"
                    app:strokeColor="@color/colorStrokePrimary">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:background="@color/colorPrimaryDark">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textColor="@color/colorPrimary"
                            android:layout_marginTop="10dp"
                            android:textSize="18dp"
                            android:textStyle="bold"
                            android:text="@string/do_you_wish_to_continue"/>
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="13dp">
                            <androidx.cardview.widget.CardView
                                android:id="@+id/cvNo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:cardCornerRadius="@dimen/cardview_corner_radius"
                                app:cardElevation="@dimen/cardview_elevation"
                                android:layout_gravity="center"
                                app:cardPreventCornerOverlap="false"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintRight_toLeftOf="@+id/cvYes"
                                >
                                <TextView
                                    android:id="@+id/tvNo"
                                    android:layout_width="100dp"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:textColor="@color/colorPrimaryDark"
                                    style="@style/button_primary"
                                    android:background="@color/buttonEnable"
                                    android:textSize="@dimen/abc_text_size_menu_material"
                                    android:textStyle="bold"
                                    android:text="@string/no"
                                    />
                            </androidx.cardview.widget.CardView>
                            <androidx.cardview.widget.CardView
                                android:id="@+id/cvYes"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:cardCornerRadius="@dimen/cardview_corner_radius"
                                app:cardElevation="@dimen/cardview_elevation"
                                android:layout_gravity="center"
                                app:cardPreventCornerOverlap="false"
                                app:layout_constraintTop_toTopOf="@+id/cvNo"
                                app:layout_constraintRight_toRightOf="parent"
                                app:layout_constraintLeft_toRightOf="@id/cvNo"
                                >
                                <TextView
                                    android:id="@+id/tvYes"
                                    android:layout_width="100dp"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:textColor="@color/colorPrimaryDark"
                                    style="@style/button_primary"
                                    android:background="@color/buttonEnable"
                                    android:textSize="@dimen/abc_text_size_menu_material"
                                    android:textStyle="bold"
                                    android:text="@string/yes"
                                    />
                            </androidx.cardview.widget.CardView>
                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>







</androidx.constraintlayout.widget.ConstraintLayout>